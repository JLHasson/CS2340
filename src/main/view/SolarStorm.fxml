<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="main.controller.RandomEventController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          stylesheets="@SolarStorm.css"
          hgap="10"
          vgap="10"
        >
    <Text fx:id="messageSolarStorm"
          text="Solar storms have caused you to stay on your current island!"
          GridPane.columnIndex="6"
          GridPane.rowIndex="6"
          stroke="black"
            />
    <Button fx:id="moveOn"
            text="OK!"
            GridPane.columnIndex="7"
            GridPane.rowIndex="6"
            onAction="#okRandEvent"
            />
</GridPane>