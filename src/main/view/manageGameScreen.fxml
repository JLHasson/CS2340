<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="main.controller.ManageGameScreenController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
        >

    <Button id="newGame"
            text="New Game"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            onAction="#handleNewGameAction"
            />
    <Button id="loadGame"
            text="Load Game"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            onAction="#loadGame"
            />
    <Button id="backbtn"
            text="Back"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            onAction="#handleBack"
            />

</GridPane>