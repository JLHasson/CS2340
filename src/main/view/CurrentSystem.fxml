<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="main.controller.CurrentSystemController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
        >

    <Text fx:id="currentSystemName"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          />
    <Text fx:id="currentSystemLoc"
          GridPane.columnIndex="1"
          GridPane.rowIndex="0"
          />

    <Button fx:id="Travel"
            text="Travel!"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.rowIndex="2"
            onAction="#goToTravel"
          />

    <Button fx:id="Marketplace"
            text="Go to Marketplace"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.rowIndex="1"
            onAction="#goToMarketplace"
            />
    <Button id="Shipyard"
            text="Go to Shipyard"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            onAction="#goToShipyard"
            />
    <Button id="saveGame"
            text="Save Game"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            onAction="#saveGame"
            />
</GridPane>